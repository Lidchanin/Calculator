<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.Pages.CalculatorPage">

    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>

            <!--#region Expression and Result-->
            <BoxView BackgroundColor="Gray" 
                     Grid.Column="0"
                     Grid.ColumnSpan="2"
                     Grid.Row="0"/>
            <!--#endregion-->

            <!--#region Almost only Numbers-->
            <Grid Grid.Column="0"
                  Grid.Row="1"
                  BackgroundColor="Turquoise">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Button Text="7"
                        Grid.Column="0"
                        Grid.Row="0"/>
                <Button Text="4"
                        Grid.Column="0"
                        Grid.Row="1"/>
                <Button Text="1"
                        Grid.Column="0"
                        Grid.Row="2"/>
                <Button Text="."
                        Grid.Column="0"
                        Grid.Row="3"/>
                <Button Text="8"
                        Grid.Column="1"
                        Grid.Row="0"/>
                <Button Text="5"
                        Grid.Column="1"
                        Grid.Row="1"/>
                <Button Text="2"
                        Grid.Column="1"
                        Grid.Row="2"/>
                <Button Text="0"
                        Grid.Column="1"
                        Grid.Row="3"/>
                <Button Text="9"
                        Grid.Column="2"
                        Grid.Row="0"/>
                <Button Text="6"
                        Grid.Column="2"
                        Grid.Row="1"/>
                <Button Text="3"
                        Grid.Column="2"
                        Grid.Row="2"/>
                <Button Text="="
                        Grid.Column="2"
                        Grid.Row="3"/>
            </Grid>
            <!--#endregion-->

            <!--#region Operations-->
            <Grid Grid.Column="1"
                  Grid.Row="1"
                  BackgroundColor="Tan">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Button Text="Del"
                        Grid.Row="0"/>
                <Button Text="/"
                        Grid.Row="1"/>
                <Button Text="*"
                        Grid.Row="2"/>
                <Button Text="-"
                        Grid.Row="3"/>
                <Button Text="+"
                        Grid.Row="4"/>
            </Grid>
            <!--#endregion-->

        </Grid>
    </ContentPage.Content>

</ContentPage>
